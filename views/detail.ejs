<div class="container">
    <div class="mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2>Detail Contact</h2>
                <% if (!contact) { %>
                    <div class="alert alert-danger" role="alert">
                        Contact with phone number <b><%= phoneNumber %></b> is not found <br>
                        <a href="/contact" class="alert-link">Back to list contact</a>.
                    </div>
                <% } else {%>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Nama: <%= contact.name %> </h5>
                            <h6 class="card-subtitle mb-2 text-muted">Phone Number: <%= contact.phoneNumber %> </h6>
                            <p class="card-text">E-mail: <%= contact.email %> </p>
                            <a href="/contact/edit/<%= contact.phoneNumber %>" class="btn btn-primary badge">Edit</a>
                            <a href="/contact/delete/<%= contact.phoneNumber %>" class="btn btn-danger badge" onclick="return confirm('yakin?')">Hapus</a>
                            <a href="/contact" class="card-link d-block mt-3">&laquo; Contact List</a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>